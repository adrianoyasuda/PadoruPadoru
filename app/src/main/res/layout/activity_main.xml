<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Press Padoru!!!"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="60dp"
            app:layout_constraintHorizontal_bias="0.497" android:id="@+id/txt_title" android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_count" app:layout_constraintEnd_toEndOf="@+id/txt_title"
            app:layout_constraintStart_toStartOf="@+id/txt_title"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:textSize="25dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_title" app:layout_constraintHorizontal_bias="0.472"/>
    <ImageView
            android:layout_width="223dp"
            android:layout_height="261dp" app:srcCompat="@drawable/padoru"
            android:id="@+id/img_padoru"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_count" app:layout_constraintEnd_toEndOf="@+id/txt_title"
            app:layout_constraintStart_toStartOf="@+id/txt_title" app:layout_constraintHorizontal_bias="0.509"/>

</androidx.constraintlayout.widget.ConstraintLayout>